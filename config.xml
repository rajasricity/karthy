<?xml version='1.0' encoding='utf-8'?>
<widget id="com.karthy.retailers" version="1.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>eInstapay</name>
    <description>
        eInstapay Digital Payments
    </description>
    <author email="sanarajasekhar@gmail.com" href="https://retailers.karthyrechnologies.com">
        eInstapay
    </author>
    <preference name="OverrideUserAgent" value="Mozilla/5.0 My Browser" />
    <preference name="orientation" value="portrait"/>
    <preference name="fullscreen" value="true"/>
  <preference name="KeepRunning" value="false"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="android-build-tool" value="gradle"/>
    <platform name="android">
    <icon src="resources/ldpi.png" density="ldpi" />
    <icon src="resources/mdpi" density="mdpi" />
    <icon src="resources/hdpi.png" density="hdpi" />
    <icon src="resources/xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="resources/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="resources/icon-60.png" width="60" height="60" />
        <icon src="resources/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="resources/icon-76.png" width="76" height="76" />
        <icon src="resources/icon-76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="resources/icon-40.png" width="40" height="40" />
        <icon src="resources/icon-40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="resources/icon.png" width="57" height="57" />
        <icon src="resources/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="resources/icon-72.png" width="72" height="72" />
        <icon src="resources/icon-72@2x.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="resources/icon-167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="resources/icon-small.png" width="29" height="29" />
        <icon src="resources/icon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="resources/icon-50.png" width="50" height="50" />
        <icon src="resources/icon-50@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="resources/icon-83.5@2x.png" width="167" height="167" />
    </platform>
    <preference name="SplashScreenDelay" value="5000" />
    <content src="index.html" />
    <platform name="android">
    <splash platform="android" qualifier="port-ldpi" src="resources/ldpisp.png" />
<splash platform="android" qualifier="port-mdpi" src="resources/mdpisp.png" />
<splash platform="android" qualifier="port-hdpi" src="resources/hdpisp.png" />
<splash platform="android" qualifier="port-xhdpi" src="resources/xhdpisp.png" />
</platform>
    <splash src="resources/splash.png" />
    <plugin name="cordova-plugin-splashscreen" spec="4.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
     <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
